<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".WelcomeActivity">


    <Button
        android:id="@+id/welcomeSignInButton"
        android:layout_width="328dp"
        android:layout_height="63dp"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="590dp"
        android:layout_marginEnd="25dp"
        android:text="@string/sign_in" />

    <Button
        android:id="@+id/welcomeSignUpButton"
        android:layout_width="328dp"
        android:layout_height="63dp"
        android:layout_alignStart="@+id/welcomeSignInButton"
        android:layout_alignTop="@+id/welcomeSignInButton"
        android:layout_alignEnd="@+id/welcomeSignInButton"
        android:layout_centerInParent="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="-76dp"
        android:layout_marginEnd="-2dp"
        android:layout_marginBottom="-196dp"
        android:text="@string/sign_up" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="-16dp"
        app:srcCompat="@drawable/logo2" />


</RelativeLayout>

